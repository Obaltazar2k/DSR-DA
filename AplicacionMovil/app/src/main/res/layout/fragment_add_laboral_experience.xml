<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".fragments.AddLaboralExperienceFragment"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:text="Experiencia laboral"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/itemLaboralExperienceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:hint="Titulo de la experiencia"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/itemLaboralExperienceOrganization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:hint="Nombre de la empresa"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/itemlaboralExperienceCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:hint="Pais"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/itemlaboralExperienceCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:hint="Ciudad"
        android:textSize="18sp"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:hint="Es mi trabajo actual"
            android:textSize="18sp"/>

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal" >

        <EditText
            android:id="@+id/itemLaboralExperienceStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:hint="Fecha inicio"
            android:inputType="date"
            android:focusable="false"
            android:clickable="true"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/itemLaboralExperienceEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:hint="Fecha fin"
            android:inputType="date"
            android:focusable="false"
            android:clickable="true"
            android:textSize="18sp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:hint="Categoria de trabajo:"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/spinnerJobCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/black"
        android:foregroundTint="@color/black"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:popupBackground="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:hint="Tipo de empleo:"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/spinnerKindOfJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/black"
        android:foregroundTint="@color/black"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:popupBackground="@color/white" />

    <Button
        android:id="@+id/buttonUploadLaboralExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar experiencia laboral"
        android:layout_gravity="center"/>

</LinearLayout>