<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".fragments.AddSectionFragment"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:text="Sección"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/itemSectionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:hint="Titulo de sección"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/itemSectionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:hint="Descripción de la sección"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/buttonUploadSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar sección"
        android:layout_gravity="center"/>

</LinearLayout>